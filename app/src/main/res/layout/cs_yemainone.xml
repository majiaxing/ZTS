<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="204px"
                android:background="@drawable/top_bg_g"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    >

                    <TextView
                        android:id="@+id/Text_Banb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="48px"
                        android:gravity="center"
                        android:text="人教版"
                        android:textColor="#fff"
                        android:textSize="45px"

                        />

                    <TextView
                        android:id="@+id/Text_NianJ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="一年级"
                        android:textColor="#fff"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/Text_SXiaC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="下册"
                        android:textColor="#fff"
                        android:textSize="45px" />

                    <ImageView
                        android:id="@+id/Back"
                        android:layout_width="54px"
                        android:layout_height="23px"
                        android:layout_gravity="center"
                        android:src="@drawable/xialak_btn" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/XX_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_marginTop="30px"
                    >

                    <ImageView
                        android:layout_width="48px"
                        android:layout_height="58px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/xx_xx"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="30px"
                        />

                    <TextView
                        android:id="@+id/Wd_Ts"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="40px"
                        android:background="@mipmap/wd_bg"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="28px"
                        android:gravity="center"
                        android:layout_marginBottom="30px"
                         />

                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/HW_"
                android:layout_width="match_parent"
                android:layout_height="492px"
                android:scaleType="fitXY"
                android:src="@mipmap/banner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38px"
                android:background="@color/pe_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53px"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="53px"
                        android:layout_height="match_parent"
                        android:src="@drawable/yd_g" />

                    <TextView
                        android:layout_width="188px"
                        android:layout_height="47px"
                        android:layout_marginLeft="29px"
                        android:text="课文朗读"
                        android:textSize="40px" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"

                    >

                    <RelativeLayout
                        android:id="@+id/Yin_Biao"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/yb_bg"
                        android:gravity="center_vertical"
                        >


                        <TextView
                            android:id="@+id/yb_text"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="音标"
                            android:textColor="#FFFFFF"
                            android:textSize="40px"

                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Danci"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/dc"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/Danci_text"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="单词"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="25px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >


                    <RelativeLayout
                        android:id="@+id/Duan_yu"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/dy"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/Duany_text"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="短语"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/Juzi"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/jz"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/Juzi_Text"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="句子"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="25px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <RelativeLayout
                        android:id="@+id/Ke_Wen"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/kw"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/Kw_text"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="课文"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="413px"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53px"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="53px"
                        android:layout_height="match_parent"
                        android:src="@drawable/yd_g" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="188px"
                        android:layout_height="47px"
                        android:layout_marginLeft="29px"
                        android:text="课文跟读"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/Tinghou_X"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/dh"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/thxz"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="对话"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38px"
                android:background="@color/pe_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="413px"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53px"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="53px"
                        android:layout_height="match_parent"
                        android:src="@drawable/yd_g" />

                    <TextView
                        android:layout_width="188px"
                        android:layout_height="47px"
                        android:layout_marginLeft="29px"
                        android:text="听力专项"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <RelativeLayout
                        android:id="@+id/Tinghou_H"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/xz"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/thhd"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="听力选择"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/TingL_T"
                        android:layout_width="0px"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/tingt"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tltk"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="听力填空"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="38px"
                android:background="@color/pe_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="413px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53px"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="53px"
                        android:layout_height="match_parent"
                        android:src="@drawable/yd_g" />

                    <TextView
                        android:layout_width="188px"
                        android:layout_height="47px"
                        android:layout_marginLeft="29px"
                        android:text="阅读专项"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="226px"
                    android:layout_marginLeft="44px"
                    android:layout_marginRight="46px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/Yuedu"
                        android:layout_width="match_parent"
                        android:layout_height="226px"
                        android:layout_weight="1"
                        android:background="@drawable/yd"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/ZNZW"
                            android:layout_width="204px"
                            android:layout_height="46px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:gravity="center"
                            android:text="阅读"
                            android:textColor="#FFFFFF"
                            android:textSize="40px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38px"
                android:background="@color/pe_gray" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

