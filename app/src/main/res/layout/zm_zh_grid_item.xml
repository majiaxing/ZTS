<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:layout_marginLeft="52px"
        >
            <TextView
                android:paddingRight="@dimen/x30"
                android:paddingLeft="@dimen/x30"
                android:id="@+id/zm_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i"
                android:paddingBottom="5dp"
                android:background="@drawable/shape_text_bottom_tag"
                android:textSize="48px"
                android:textColor="#333333"
                android:layout_marginLeft="15px"
                />
        </LinearLayout>
    <TextView

        android:layout_marginLeft="@dimen/x95"
        android:id="@+id/Text_X"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/pe_gray"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="55px"
        android:id="@+id/List_dc_zh_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>