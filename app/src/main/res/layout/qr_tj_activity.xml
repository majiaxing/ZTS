<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title"
        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_xg_tt"
            android:layout_gravity="center"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:text="确认添加"
            android:textSize="54px"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/pe_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="57px"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="336px"
            android:orientation="vertical"
            android:background="@drawable/huiyuan"
            >

            <TextView
                android:id="@+id/Dq_Nj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银川初中"
                android:textSize="54px"
                android:textColor="#ffffff"
                android:layout_marginTop="94px"
                android:layout_marginLeft="83px"
                />

            <TextView
                android:id="@+id/YXq_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期 ：2018—11—12至2019—11—12"
                android:layout_marginTop="59px"
                android:layout_marginLeft="83px"
                android:textSize="36px"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>


            <Button
                android:id="@+id/Que_R"
                android:layout_width="723px"
                android:layout_height="103px"
                android:text="确认"
                android:layout_marginTop="586px"
                android:textSize="48px"
                android:textColor="@color/colorWhite"
                android:background="@drawable/qr_btn_qq"
                />





    </LinearLayout>






</LinearLayout>