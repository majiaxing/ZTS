<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorWhite"
    >





    <LinearLayout
        android:layout_width="863px"
        android:layout_height="533px"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/Q_X"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="right"
            android:gravity="right"
            >




        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quxiao"

            />
        </LinearLayout>
        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认退出课文朗读？退出后将保存进度"
            android:textColor="#333333"
            android:textSize="36px"
            android:layout_marginTop="105px"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="120px"
            android:background="@color/pe_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"

            >
            <Button
                android:id="@+id/Qx_btn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="36px"
                android:textColor="@drawable/back_text"
                android:background="@drawable/yj"
                android:gravity="center"
                />

                <TextView
                    android:layout_width="4px"
                    android:layout_height="match_parent"
                    android:background="@color/pe_gray"
                    />


            <Button
                android:id="@+id/Qr_btn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="36px"
                android:textColor="#43b8c0"
                android:background="@drawable/yj"
                android:gravity="center"
                />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>