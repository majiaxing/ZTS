<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@mipmap/back_jt"
            android:layout_gravity="center"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:text="会员详情"
            android:textSize="54px"
            android:textColor="#ffffff"
            android:layout_marginTop="30px"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="800px"
        android:layout_height="1322px"
        android:background="@drawable/tcg"
        android:layout_marginLeft="130px"
        android:layout_marginTop="126px"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82px"
            android:layout_marginTop="26px"
            android:orientation="horizontal"
            android:gravity="right"
            >


            <Button
                android:id="@+id/sj_btn"
                android:layout_width="220px"
                android:layout_height="60px"
                android:background="@drawable/dian_btn_g"
                android:text="立即购买"
                android:textColor="#ffffff"
                android:layout_marginRight="130px"
                android:layout_marginTop="100px"
                />

        </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="190px"
                android:layout_marginLeft="82px"
                android:layout_marginRight="80px"
                android:layout_marginBottom="60px"
                >



            <TextView
                android:id="@+id/ChanPJS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="一、产品介绍
智听说是一款中学英语“听说读写”全学科备考产品，针对各地考纲精准命制内容，采用官方评测技术精准评测，打造智能作业平台、个性化学情图谱等领先功能，放心可信赖。"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="二、产品特点"
                        android:layout_marginTop="40px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1. 学生放心：评测精准，内容定制，体验极致；"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2. 家长放心：专业出品，效果显著，值得信赖；"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3. 老师放心：官方认证，安全可靠，减负增效。"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="三、功能介绍"
                        android:layout_marginTop="40px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1. 音标学习：从音标入门，闯关式趣味设计，练好发音基础"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2. 课文朗读：模块化巩固单元知识，朗读智能评分"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3. 课文跟读：同步教材课文，支持逐句模仿跟读和实时评测，提高口语能力。"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="20px"
                        />
                </LinearLayout>

</LinearLayout>
            </ScrollView>

    </LinearLayout>


</LinearLayout>