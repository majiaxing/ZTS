<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/huiyuan"
        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_xg_tt"
            android:layout_gravity="center"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:text="添加会员"
            android:textSize="54px"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@color/pe_gray"
        />

    <LinearLayout
        android:layout_width="720px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="180px"
        android:gravity="center_horizontal"

        >
        <ImageView
            android:layout_width="714px"
            android:layout_height="402px"
            android:layout_marginTop="120px"
            android:src="@mipmap/vip_ka"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="请输入会员卡的卡号，刮开涂层获取会员卡密码"
                android:textSize="36px"
                android:textColor="#333333"
                />
        <EditText
            android:id="@+id/Use_name"
            android:layout_width="714px"
            android:layout_height="wrap_content"
            android:hint="请输入卡号"
            android:textSize="36px"
            android:textColor="#999999"
            android:layout_marginTop="60px"
            android:background="@null"
            />

        <EditText
            android:id="@+id/Pas_ward"
            android:layout_width="714px"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="36px"
            android:textColor="#999999"
            android:background="@null"
            android:layout_marginTop="40px"

            />

            <Button
                android:id="@+id/T_jiao"
                android:layout_width="720px"
                android:layout_height="100px"
                android:background="@drawable/t_jiao_selector"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="48px"
                android:layout_marginTop="100px"

                />





    </LinearLayout>


</LinearLayout>