        <ListView
            android:id="@+id/Danc_list"
            android:layout_width="match_parent"
            android:layout_height="1360px"
            android:layout_below="@+id/linearLayout8"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45px"
            android:layout_marginTop="70px"
            android:layout_marginRight="47px"
            android:divider="#00000000"

            >
        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:layout_marginBottom="70px"
            >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="right"
                >
                <CheckBox
                    android:id="@+id/BF_zt"
                    android:layout_width="156px"
                    android:layout_height="156px"
                    android:background="@drawable/bf_zt_selector"
                    android:button="@null"
                    android:layout_marginLeft="60px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="75px"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                >


            <RelativeLayout
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55px"
                >

                <com.example.lenovo.ztsandroid.view.RippleIntroView
                    android:id="@+id/Ripple"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:clickable="true"
                    android:fitsSystemWindows="false"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    >

                    <CheckBox
                        android:id="@+id/Ly_btn"
                        android:layout_width="156px"
                        android:layout_height="156px"
                        android:background="@drawable/luyin_selector"
                        android:button="@null"
                        />

                </com.example.lenovo.ztsandroid.view.RippleIntroView>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/PinF_jd"
                        android:layout_width="156px"
                        android:layout_height="156px"
                        android:src="@drawable/progress"
                        android:layout_centerInParent="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Text_Jz"
                        android:text="评分中…"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        />

                </LinearLayout>

            </RelativeLayout>

            </RelativeLayout>




        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="890px"
            android:layout_height="230px"
            android:background="@drawable/yj_jx"
            android:layout_marginTop="800px"
            android:layout_alignTop="@+id/Danc_list"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/PF_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65分"
                android:layout_marginTop="30px"
                android:layout_marginLeft="40px"
                android:textSize="48px"
                android:textColor="@color/colorWhite"
                />


            <TextView
                android:id="@+id/GL_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加油，继续努力"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px"
                android:textColor="@color/colorWhite"
                android:textSize="48px"
                />


            <RatingBar
                android:id="@+id/Xinx_bar"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginTop="100px"
                android:layout_marginLeft="40px"
                android:numStars="5"
                android:stepSize="1"
                style="@style/roomRatingBar"
                />

            <LinearLayout
                android:id="@+id/BF_LY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:layout_marginTop="150px"
                >
                <CheckBox

                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/bd_bf_selector"
                    android:button="@null"
                    android:layout_marginTop="10px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的录音"
                    android:textSize="36px"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="20px"
                    />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>