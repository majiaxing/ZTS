<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:background="@drawable/huiyuan"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_xg_tt"
            android:layout_gravity="center"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:id="@+id/YB_xq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:text="前音标i"
            android:textSize="54px"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />
    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/YB_Tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabBackground="@color/colorWhite"
        app:tabIndicatorHeight="5px"
        app:tabIndicatorColor="@color/colortext"
        app:tabSelectedTextColor="@color/colortext"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/colorGrayBlack"
        app:tabGravity="center"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/YB_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pe_gray"
        >

    </android.support.v4.view.ViewPager>


</LinearLayout>