<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/huiyuan"
        >

        <ImageView
            android:id="@+id/back_ka"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_xg_tt"
            android:layout_gravity="center"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="375px"
            android:text="我的会员"
            android:textSize="45px"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pe_gray"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700px"
            android:layout_marginTop="92px"
            android:orientation="vertical"
            >


            <LinearLayout
                android:id="@+id/E_ka_sy"
                android:layout_width="960px"
                android:layout_height="336px"
                android:layout_marginLeft="45px"
                android:background="@drawable/bg_yjjx"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/S_Y_bq"
                    android:layout_width="200px"
                    android:layout_height="65px"
                    android:background="@drawable/sybq"
                    android:layout_marginTop="25px"
                    android:text="正在使用"
                    android:textColor="#ffffff"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82px"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/df_nj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="銀川初中"
                        android:textSize="54px"
                        android:textColor="#ffffff"
                        />


                    <ImageView
                        android:layout_width="48px"
                        android:layout_height="48px"
                        android:src="@drawable/yjt"
                        android:layout_marginLeft="590px"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="82px"
                    android:layout_marginTop="30px"
                    >

                    <TextView
                        android:id="@+id/Zt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36px"
                        android:text="免费体验"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:id="@+id/Jr_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36px"
                        android:text="未加入班級"
                        android:textColor="#ffffff"
                        android:layout_marginTop="40px"
                        />
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>





    </LinearLayout>


</LinearLayout>