<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


    <LinearLayout
        android:layout_width="863px"
        android:layout_height="589px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/Q_X"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quxiao"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式"
            android:textColor="#333333"
            android:textSize="48px"
            android:layout_marginTop="43px"

            />

        <Button
            android:id="@+id/Zfb_zf"
            android:layout_width="472px"
            android:layout_height="120px"
            android:background="@drawable/zfbzf"
            android:layout_marginTop="49px"
            android:text="支付宝支付"
            android:textColor="#fff"
            android:textSize="36px"
            android:drawableLeft="@drawable/zfb"
            android:paddingLeft="100px"
            android:drawablePadding="-80px"
            />

        <Button
            android:id="@+id/Vx_zf"
            android:layout_width="472px"
            android:layout_height="120px"
            android:background="@drawable/vxzf"
            android:layout_marginTop="59px"
            android:text="微信支付"
            android:textColor="#fff"
            android:textSize="36px"
            android:drawableLeft="@drawable/vx"
            android:paddingLeft="100px"
            android:drawablePadding="-80px"
            android:layout_marginBottom="30px"
            />

    </LinearLayout>


</LinearLayout>