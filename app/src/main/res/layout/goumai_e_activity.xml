<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:background="@drawable/title"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_xg_tt"
            android:layout_gravity="center"
            android:layout_marginLeft="50px"
            android:layout_marginTop="30px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="363px"
            android:text="购买会员"
            android:textSize="54px"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:gravity="right"
                android:id="@+id/NJ_popup"
                android:layout_marginRight="30px"
                >


                <TextView
                    android:id="@+id/NJ_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content"
                    android:background="@null"
                    android:layout_marginTop="20px"
                    android:text="初中"
                    android:textColor="#fff"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xialak_btn"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="18px"
                    />

            </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#eeeeee"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginTop="40px"
        android:gravity="center_vertical"
        android:paddingBottom="40px"
        >



     <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:id="@+id/Shen_popup"
        >

        <TextView
            android:id="@+id/Shenj_Dq_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="宁夏"

            ></TextView>

         <ImageView
             android:layout_width="25px"
             android:layout_height="14px"
             android:layout_marginLeft="20px"
             android:layout_marginTop="20px"
             android:src="@drawable/xl_sj"
             />



    </LinearLayout>

     <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:orientation="horizontal"
         android:id="@+id/Shi_popup"
         android:gravity="center_horizontal"
        >


         <TextView
             android:id="@+id/Sj_Dq_spinner"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@null"
             android:text="银川市"
             ></TextView>
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20px"
             android:layout_marginTop="20px"
             android:src="@drawable/xl_sj"
             />
    </LinearLayout>

<LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/Qu_Popup"
    android:gravity="center_horizontal"
        >


  <TextView
      android:id="@+id/nj_spinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@null"
      android:text="金凤区"

      ></TextView>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20px"
      android:layout_marginTop="20px"
      android:src="@drawable/xl_sj"
      />
    </LinearLayout>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        />

    <LinearLayout
        android:id="@+id/Vip_Linear"
        android:layout_width="987px"
        android:layout_height="290px"
        android:background="@drawable/vip_bg_g"
        android:layout_marginLeft="48px"
        android:layout_marginRight="48px"
        android:layout_marginTop="68px"

        >
        <TextView
            android:id="@+id/DF_NJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银川初中"
            android:layout_marginTop="180px"
            android:layout_marginLeft="50px"
            android:textColor="#ffffff"
            android:textSize="54px"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:src="@drawable/jiantou"
            android:layout_marginLeft="600px"
            android:layout_marginTop="120px"
            />


    </LinearLayout>


</LinearLayout>