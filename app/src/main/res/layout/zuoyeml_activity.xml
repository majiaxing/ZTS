<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"

    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="204px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title"
        >

        <LinearLayout
            android:id="@+id/back_jt"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="30px"
            android:gravity="bottom">
            <ImageView

                android:layout_width="45px"
                android:layout_height="45px"
                android:src="@drawable/back_xg_tt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30px"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="作业1"
            android:textSize="54px"
            android:textColor="#fff"
            android:layout_marginTop="30px"
            />

        <LinearLayout
            android:id="@+id/ChaK_XQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/back_jt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48px"
            android:layout_marginTop="10px"
            >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="41px"
            android:layout_height="41px"
            android:src="@drawable/chakan_xq"
            android:layout_marginRight="29px"

            />
            <TextView
                android:id="@+id/dianjichakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="#fff"
                />



        </LinearLayout>


    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/pe_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#fff"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次作业共100分"
        android:textSize="48px"
        android:textColor="#333333"
        android:layout_marginLeft="49px"
        android:layout_marginBottom="41px"
        android:layout_centerVertical="true"
        android:id="@+id/textView5" />

        <TextView
            android:id="@+id/XueShengFenS"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="未开始作业"
              android:textSize="36px"
              android:textColor="#333333"
              android:layout_marginLeft="49px"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48px"
             />


    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:background="@color/pe_gray"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/List_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginBottom="177px"
       />


        <TextView
            android:id="@+id/statr_ZY"
            android:layout_width="match_parent"
            android:layout_height="177px"
            android:text="开始作业"
            android:gravity="center"
            android:background="@drawable/title"
            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>




</LinearLayout>