<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="45px"
        android:layout_marginTop="70px"
        android:id="@+id/relativeLayout"

        >

        <ImageView
            android:id="@+id/back_jt"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@drawable/back_jt"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:layout_marginTop="20px"
            />

        <TextView
            android:id="@+id/Zw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="智能作文"
            android:textSize="54px"
            android:textColor="#333333"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="33px"
        android:background="@color/pe_gray"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74px"
        android:layout_marginLeft="52px"
        android:layout_marginRight="52px"
        >

    <TextView
        android:id="@+id/ZW_JS_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="************************************************************************* ************************************************************************ "
        android:textSize="36px"
        android:textColor="#666666"

        />
    <TextView
        android:id="@+id/ZW_JS_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:textColor="#666666"
        android:layout_marginTop="78px"
        android:layout_marginBottom="78px"
        android:text="************************************************ ************ ***************************************************   **************************"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/live_china_grak"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/live_china_grak"
            android:layout_marginTop="78px"
            />
        <TextView
            android:layout_width="346px"
            android:layout_height="2px"
            android:background="@color/live_china_grak"
            android:layout_marginTop="78px"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/PZ_DT"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center"
        android:background="@drawable/jx_bg"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="50px"
            android:layout_height="42px"
            android:src="@drawable/xj"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照答题"
            android:textColor="#ffffff"
            android:padding="20px"
            />

    </LinearLayout>


</RelativeLayout>